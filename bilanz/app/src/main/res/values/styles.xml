<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- general Styles for wrapContent-->
    <style name="general_WrapContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="general_Middle_WrapContent" parent="general_WrapContent">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="general_Top_WrapContent" parent="general_Middle_WrapContent">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="general_Bottom_WrapContent" parent="general_Middle_WrapContent">
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- general Styles for MatchParent-->
    <style name="general_MatchParent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="general_Middle_MatchParent" parent="general_MatchParent">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="general_Top_MatchParent" parent="general_Middle_MatchParent">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="general_Bottom_MatchParent" parent="general_Middle_MatchParent">
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>
